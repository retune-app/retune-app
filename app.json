{
  "expo": {
    "name": "ReWired",
    "slug": "subconscious-rewire",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/icon.jpg",
    "scheme": "subconsciousrewire",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.subconsciousrewire.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record your voice for personalized affirmations.",
        "UIBackgroundModes": ["audio"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#F5F5F5",
        "foregroundImage": "./assets/images/icon.jpg"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.subconsciousrewire.app",
      "permissions": ["RECORD_AUDIO"]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/icon.jpg"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.jpg",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#F5F5F5",
          "dark": {
            "backgroundColor": "#121212"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-av",
        {
          "microphonePermission": "Allow ReWired to access your microphone to record personalized affirmations."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
